<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.financialfragments.AssetsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAsset"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/assetsOne"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/boarder_box"
        android:text="Add Assets"
        android:textSize="20sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sync"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="125dp"
        android:layout_marginBottom="85dp"
        android:background="@drawable/boarder_box"
        android:text="Sync to FireStore"
        android:textSize="20sp" />


</FrameLayout>